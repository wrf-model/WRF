{
  "submit_options" :
  {
    "timelimit" : "00:20:00",
    "working_directory" : "..",
    "arguments" :
    {
      "base_env_numprocs"      : [ "-e", "NUM_PROCS=4" ],
      ".*::args_nesting"       : [ "-n", "1" ],
      ".*::args_configopt"     : [ "-o", "-d" ],
      ".*::args_build_tgt"     : [ "-b", "em_real -j $NUM_PROCS" ]
    },
    "cheyenne"  :
    {
      "submission" : "PBS",
      "queue"     : "economy",
      "resources"  : "-l select=1:ncpus=6",
      "arguments"  : 
      {
        "very_last_modules"       : [ "netcdf", "cmake/3.22.0" ],
        ".*gnu.*::test_modules"   : [ "gnu" ],
        ".*intel.*::test_modules" : [ "intel" ],
        ".*pgi.*::test_modules"   : [ "pgi" ],
        ".*dm.*::test_mpi_module" : [ "openmpi/4.0.3" ]

      }
    },
    "hsn.de.hpc"  :
    {
      "submission" : "PBS",
      "queue"      : "main",
      "resources"  : "-l select=1:ncpus=8 -l job_priority=economy",
      "arguments"  : 
      {
        "base_env_numprocs"      : [ "-e", "NUM_PROCS=8" ],
        "very_last_modules"       : [ "netcdf", "cmake/3.22.0" ],
        ".*gnu.*::test_modules"   : [ "gcc" ],
        ".*intel.*::test_modules" : [ "intel-classic" ],
        ".*pgi.*::test_modules"   : [ "nvhpc" ],
        ".*dm.*::test_mpi_module" : [ "cray-mpich" ]
      }
    },
    "polaris" :
    {
      "submission" : "LOCAL"
    }
  },
  "gnu-nompi" :
  {
    "steps" :
    {
      "serial" :
      {
        "command"      : ".ci/tests/build.sh",
        "arguments"    : [ "-c", "32" ]
      },
      "sm" :
      {
        "command"      : ".ci/tests/build.sh",
        "arguments"    : [ "-c", "33" ],
        "dependencies" : { "serial" : "afterany" }
      }
    }
  },
  "gnu-mpi" :
  {
    "steps" :
    {
      "dm" :
      {
        "command"      : ".ci/tests/build.sh",
        "arguments"    : [ "-c", "34" ]
      },
      "dm+sm" :
      {
        "command"      : ".ci/tests/build.sh",
        "arguments"    : [ "-c", "35" ],
        "dependencies" : { "dm" : "afterany" }
      }
    }
  },
  "intel-nompi" :
  {
    "submit_options" :
    { 
      "cheyenne" : { "timelimit" : "01:00:00" },
      "hsn.de.hpc" : { "timelimit" : "00:45:00" }
    },
    "steps" :
    {
      "serial" :
      {
        "command"      : ".ci/tests/build.sh",
        "arguments"    : [ "-c", "13" ]
      },
      "sm" :
      {
        "command"      : ".ci/tests/build.sh",
        "arguments"    : [ "-c", "14" ],
        "dependencies" : { "serial" : "afterany" }
      }
    }
  },
  "intel-mpi" :
  {
    "submit_options" :
    { 
      "cheyenne" : { "timelimit" : "01:00:00" },
      "hsn.de.hpc" : { "timelimit" : "00:45:00" }
    },
    "steps" :
    {
      "dm" :
      {
        "command"      : ".ci/tests/build.sh",
        "arguments"    : [ "-c", "15" ]
      },
      "dm+sm" :
      {
        "command"      : ".ci/tests/build.sh",
        "arguments"    : [ "-c", "16" ],
        "dependencies" : { "dm" : "afterany" }
      }
    }
  },
  "pgi-nompi" :
  {
    "steps" :
    {
      "serial" :
      {
        "command"      : ".ci/tests/build.sh",
        "arguments"    : [ "-c", "1" ]
      },
      "sm" :
      {
        "command"      : ".ci/tests/build.sh",
        "arguments"    : [ "-c", "2" ],
        "dependencies" : { "serial" : "afterany" }
      }
    }
  },
  "pgi-mpi" :
  {
    "steps" :
    {
      "dm" :
      {
        "command"      : ".ci/tests/build.sh",
        "arguments"    : [ "-c", "3" ]
      },
      "dm+sm" :
      {
        "command"      : ".ci/tests/build.sh",
        "arguments"    : [ "-c", "4" ],
        "dependencies" : { "dm" : "afterany" }
      }
    }
  }
