      },
      "testcase-serial" :
      {
        "submit_options" : {
                            "cheyenne" : { "resources" : "-l select=1:ncpus=1" },
                            "derecho"  : { "resources" : "-l select=1:ncpus=1 -l job_priority=economy" }
                            },
        "command"      : ".ci/tests/runNamelists.sh",
