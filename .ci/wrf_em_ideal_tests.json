                            "derecho"  : { "resources" : "-l select=1:ncpus=8:ompthreads=8 -l job_priority=economy" }
                            },
        "command"      : ".ci/tests/runNamelists.sh",
        "dependencies" : { "build-omp" : "afterok" }
