# Fortran 90 suffix rules
# -----------------------
.SUFFIXES:
.SUFFIXES: .F95 .f95 .F90 .f90 .f .o
.F95.o:
	$(FC) $(EXTRA_FC_FLAGS) $(FC_FLAGS) $(FPP_FLAGS) $<

.f95.o:
	$(FC) $(EXTRA_FC_FLAGS) $(FC_FLAGS) $<

.F90.o:
	$(FC) $(EXTRA_FC_FLAGS) $(FC_FLAGS) $(FPP_FLAGS) $<

.f90.o:
	$(FC) $(EXTRA_FC_FLAGS) $(FC_FLAGS) $<

.f.o:
	$(FC) $(EXTRA_FC_FLAGS) -c $<

