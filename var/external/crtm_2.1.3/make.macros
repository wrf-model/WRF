LINUX_FLAGS_INTEL_PROD = "FC=${NAME_INTEL}" \
	                 "FL=${NAME_INTEL}" \
	                 "FC_FLAGS= -c \
                                    -O2 \
                                    -convert big_endian \
                                    -free \
      	                            -assume byterecl \
                                    ${INCLUDES} \
                                    ${LINUX_COMMON_FLAGS_PROD}" \
                         "FL_FLAGS= ${LINUX_COMMON_FLAGS_PROD} \
                                    ${LIBRARIES} \
                                    -o" \
                         "ENDIAN=Little_Endian"

# Here set the DEFAULT Intel compiler flags
LINUX_FLAGS_INTEL = $(LINUX_FLAGS_INTEL_DEBUG)



