LINUX_FLAGS_INTEL_DEBUG = "FC=${NAME_INTEL}" \
                          "FL=${NAME_INTEL}" \
                          "FC_FLAGS= -c \
                                     -g \
                                     -check bounds \
                                     -convert big_endian \
                                     -e03 \
                                     -traceback \
                                     -free \
                                     -assume byterecl \
                                     -fp-stack-check \
                                     -mieee-fp \
                                     ${INCLUDES} \
                                     ${LINUX_COMMON_FLAGS_DEBUG}" \
	                  "FL_FLAGS= ${LINUX_COMMON_FLAGS_DEBUG} \
                                     ${LIBRARIES} \
                                     -o" \
                          "ENDIAN=Little_Endian"

# Compiler settings for PRODUCTION builds
