EOF
         set jobid = `qsub  submit_pbs.csh`

      #else
      #   $RUN_CMD $NPROCS[$N] ${PWD}/da_wrfvar.exe < /dev/null
      endif
#------------------------------------

    set i = 1
    while ( $i <= 1000 )
      sleep 30
      echo "sleep 30" >> log
     if ( "`qstat | grep -o -m 1 $jobid`" != $jobid ) then # if job finish
      if ( "`tail  rsl.out.0000 | grep -o -m 1 successfully`" != "successfully" ) then
        echo "da_wrfvar stage2_$N failed " > FAIL
        exit -1
      else
        break
      endif
     else
      @ i++
     endif
    end
    echo "done" >> log

      echo "------------------------------"
