        mv vp_output.global_hires* $out_storage
        rm vp_output.global
      endif

   endif # $N < $MAX_OUTERLOOP

  endif ## end if RUN_STAGE3=true

    @ N++

  end # End of outerloop

  rm fg fg02 wrfinput_d01 wrfbdy_d01

